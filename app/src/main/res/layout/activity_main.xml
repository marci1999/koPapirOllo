<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="1200dp"
        android:layout_height="30dp"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:orientation="horizontal"
        android:gravity="left">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart2"
            android:id="@+id/gepElet1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            android:paddingRight="2dp"
            android:paddingLeft="2dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/heart2"
                android:id="@+id/gepElet2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            android:paddingRight="2dp"
            android:paddingLeft="2dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/heart2"
                android:id="@+id/gepElet3"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gép"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="1200dp"
        android:layout_height="30dp"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:orientation="horizontal"
        android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="játékos"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart2"
            android:id="@+id/jatekosElet3"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            android:paddingRight="2dp"
            android:paddingLeft="2dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/heart2"
                android:id="@+id/jatekosElet2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            android:paddingRight="2dp"
            android:paddingLeft="2dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/heart2"
                android:id="@+id/jatekosElet1"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="1200dp"
        android:layout_height="750dp"
        android:paddingTop="40dp"
        android:paddingLeft="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="döntetlen körök száma: 0"
            android:id="@+id/dontetlenKorok"
            android:textSize="25dp"/>
    </LinearLayout>





</RelativeLayout>